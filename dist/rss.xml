        <item>
            <title><![CDATA[レパートリー]]></title>
            <link>https://yamanami-choir-club.netlify.app/repertoire</link>
            <guid isPermaLink="false">https://yamanami-choir-club.netlify.app/repertoire</guid>
            <pubDate>Wed, 03 Dec 2025 00:00:00 GMT</pubDate>
            <content:encoded><![CDATA[<p>import { getCollection } from ‘astro:content’</p>
<p>export const history = await getCollection(‘history’)</p>
<p>export const groupedByComposer = history.reduce((acc, item) =&gt; {
const composer = item.data.composer
if (!acc[composer]) {
acc[composer] = []
}
acc[composer].push(item)
return acc
}, {})</p>
<p>export const sortedComposers = Object.keys(groupedByComposer).sort((a, b) =&gt; a.localeCompare(b))</p>
<div class="history-list">
  {sortedComposers.map((composer) =&gt; (
    <div class="composer-group">
      <h3 class="composer-name">{composer}</h3>
      <ul class="song-list">
        {groupedByComposer[composer].map((item) =&gt; (
          <li class="song-item">
            <span class="song-title">{item.data.title}</span>
            <span class="lyricist">（text: {item.data.lyricist}）</span>
          </li>
        ))}
      </ul>
    </div>
  ))}
</div>
]]></content:encoded>
        </item>
